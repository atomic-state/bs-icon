{
  "compilerOptions": {
    // "watch": true,
    "outDir": "./",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2015",
    "lib": ["es6", "dom", "es2019"],
    "sourceMap": false,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "lib",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true
  },
  "include": ["lib"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ],
  "types": ["node"]
}
